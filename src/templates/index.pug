extends _layout/layout

//- Các giá trị mặc định cho trang web
block variables
	- var title = 'Home'
	- var description = 'Description for home page'
	- var bodyclass = 'home'
block body
	section.mobile-style
		.container
			.row
				.col
					.mobile
						.top
						.bottom
						.screen
							img.image(src="../img/bg.jpg", alt="background	", srcset="")
							h2 13:00 
								span AM
								br
								span 11/10/2019
							nav
								ul
									li
										i.fas.fa-phone
									li
										i.fab.fa-facebook-messenger
									li
										i.fas.fa-camera
									li
										i.fas.fa-image
	section.rotate-square
		.container
			.row
				.col
					.rotate-square-loader
						.square.one
						.square.two
						.square.three
						.square.four
	section.layer-3d-image
		.container
			.row
				.col
					.layer-3d
						img.image.img-fluid(src="../img/bg.jpg", alt="background", srcset="")
						img.image.img-fluid(src="../img/bg.jpg", alt="background", srcset="")
						img.image.img-fluid(src="../img/bg.jpg", alt="background", srcset="")
						img.image.img-fluid(src="../img/bg.jpg", alt="background", srcset="")
	section.scroll-down
		.container
			.row
				.col
					.indicator-animation
						span
						span
						span
						span
	section.ring-loader
		.container
			.row
				.col
					.ring Loading
						span 
	section.product-image-slider
		.container
			.row
				.col
					nav.product
						ul
							li
								a.img-product(href="../img/img1.jpg" target="imgBox")
									img(src="../img/thumb1.jpg", alt="")
							li
								a.img-product(href="../img/img2.jpg" target="imgBox")
									img(src="../img/thumb2.jpg", alt="")
							li
								a.img-product(href="../img/img3.jpg" target="imgBox")
									img(src="../img/thumb3.jpg", alt="")
						.imgBox
							img.image-box(src="../img/img1.jpg", alt="")
	section.screen-overlay
		.container-fluid
			.row
				.col
					.toggle
					.navigation
						nav
							ul
								li
									a(href="#" data-text="Home") Home
								li
									a(href="#" data-text="About") About
								li
									a(href="#" data-text="Services") Services
								li
									a(href="#" data-text="Team") Team
								li
									a(href="#" data-text="Profile") Profile
								li
									a(href="#" data-text="Contact") Contact
	section.video-full-screen(data-vide-bg="./videos/videoFroBg")
		.container
			.row
				.col
					.login-form
						form(action="#", method="get")
							h2.header-content Sign In
							.text-username
								input(type="text" name="username" placeholder="Enter username")
							.text-password
								input(type="password" name="password" placeholder="Enter password")
							.button-submit
								button(type="submit") Logn In
						.forget-password
							a(href="#") Forget Password